<core:FragmentDefinition                                                                                                                                                                                                                                       
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:f="sap.ui.layout.form"                                                                                                                                                                                                                                  
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
	xmlns:core="sap.ui.core">                                                                                                                                                                                                                                     
	<Dialog title="Ask ABHI" id="oId_AskAbhiDialog" contentHeight="75%" contentWidth="50%">                                                                                                                                                                       
		<content>                                                                                                                                                                                                                                                    
			<Page floatingFooter="true" backgroundDesign="Transparent" showHeader="false">                                                                                                                                                                              
					<VBox id="oID_VBox">                                                                                                                                                                                                                                      
						<FlexBox id="oID_AI_ABHI_CHAT" class="sapUiSmallMarginTop" direction="Column" alignContent="Stretch" renderType="List" >                                                                                                                                 
							<items>                                                                                                                                                                                                                                                 
								<HBox width="100%">&nbsp;                                                                                                                                                                                                                              
									<FlexBox class="sapUiTinyMarginTop sapUiTinyMarginBegin"&nbsp;                                                                                                                                                                                        
										height="100px"                                                                                                                                                                                                                                       
										alignItems="Start"&nbsp;                                                                                                                                                                                                                             
										justifyContent="Start">                                                                                                                                                                                                                              
											<TextArea value="Hello! How may I help you?" editable="false" ></TextArea>                                                                                                                                                                          
									</FlexBox>								                                                                                                                                                                                                                                    
								</HBox>                                                                                                                                                                                                                                                
							</items>                                                                                                                                                                                                                                                
						</FlexBox>                                                                                                                                                                                                                                               
					</VBox>                                                                                                                                                                                                                                                   
				<footer>                                                                                                                                                                                                                                                   
					<OverflowToolbar design="Transparent" class="sapUiMediumMarginTop"  height="4rem">                                                                                                                                                                        
						<content>                                                                                                                                                                                                                                                
							<TextArea id="oID_QueryInput" placeholder="Enter your Query" growing="true" growingMaxLines="7" width="100%" />                                                                                                                                         
						</content>                                                                                                                                                                                                                                               
					</OverflowToolbar>                                                                                                                                                                                                                                        
				</footer>                                                                                                                                                                                                                                                  
			</Page>                                                                                                                                                                                                                                                     
		</content>                                                                                                                                                                                                                                                   
		<footer>                                                                                                                                                                                                                                                     
			<Toolbar>                                                                                                                                                                                                                                                   
				<content>                                                                                                                                                                                                                                                  
					<CheckBox id="oID_QueryContextType" text="Query with Previous Context." selected="false" />                                                                                                                                                               
					<ToolbarSpacer />                                                                                                                                                                                                                                         
					<Button type="Emphasized"                                                                                                                                                                                                                                 
							text="Submit"                                                                                                                                                                                                                                           
							press="_HandleQuery" />                                                                                                                                                                                                                                 
					<Button                                                                                                                                                                                                                                                   
						text="Cancel"                                                                                                                                                                                                                                            
						press="_closetheAIPopUp"                                                                                                                                                                                                                                 
						ariaHasPopup="Dialog" />                                                                                                                                                                                                                                 
				</content>                                                                                                                                                                                                                                                 
			</Toolbar>                                                                                                                                                                                                                                                  
		</footer>                                                                                                                                                                                                                                                    
	</Dialog>                                                                                                                                                                                                                                                     
</core:FragmentDefinition>                                                                                                                                                                                                                                     